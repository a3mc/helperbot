{
    "name": "helperbot",
    "version": "1.0.0",
    "description": "Distressing Helper Bot for DevDao workflows",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "migrate": " npm run build && node dist/migrate.js",
        "start": "npm run build && node ./dist/index.js",
        "start:pm2": "NODE_ENV=production npm run build && pm2 start ./dist/index.js --exp-backoff-restart-delay 3000 --kill-timeout 2000",
        "clean": "rm -rf dist",
        "test": "npm run build && mocha 'dist/test/**/*.js' --recursive --timeout 60000 --exit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/a3mc/helperbot.git"
    },
    "keywords": [
        "devdao",
        "devxdao",
        "alert-bot",
        "telegram",
        "productivity"
    ],
    "author": "ART3MIS.CLOUD",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/a3mc/helperbot/issues"
    },
    "homepage": "https://github.com/a3mc/helperbot#readme",
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.34",
        "nock": "^13.2.4",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "chai": "^4.3.6",
        "dotenv": "^16.0.0",
        "mocha": "^10.0.0",
        "moment": "^2.29.3",
        "mysql": "^2.18.1",
        "telegraf": "^4.8.1",
        "winston": "^3.7.2",
        "winston-telegram": "^2.6.0"
    }
}
